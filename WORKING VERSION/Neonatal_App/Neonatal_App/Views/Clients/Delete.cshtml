@model Neonatal_App.Models.Client

@{
    ViewBag.Title = "Delete";
}

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client Information</title>
    <link rel="stylesheet" href="css/normalize.css">
    <link href='http://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="css/main.css">
</head>
<body>
    <table>
        <caption>
            @Html.DisplayFor(m => m.first_name)
            @Html.DisplayFor(m => m.last_name)
        </caption>
        <thead>
            <tr>
                <th scope="row">DOB</th>
                <th scope="row">Address</th>
                <th scope="row">City</th>
                <th scope="row">Zip Code</th>
                <th scope="row">County</th>
                <th scope="row">Ward</th>
                <th scope="row">Phone</th>
                <th scope="row">Email</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <td colspan="3">@Html.ActionLink("Go Back", "Index", "Clients")</td>
            </tr>
        </tfoot>
        <tbody>
            <tr>
                <td scope="row">@Html.DisplayFor(model => model.DOB)</td>
                <td scope="row">
                    @Html.DisplayFor(model => model.street_number)
                    @Html.DisplayFor(model => model.street_name)
                </td>
                <td scope="row">@Html.DisplayFor(model => model.city)</td>
                <td scope="row">@Html.DisplayFor(model => model.zip_code)</td>
                <td scope="row">@Html.DisplayFor(model => model.county)</td>
                <td scope="row">@Html.DisplayFor(model => model.ward)</td>
                <td scope="row">@Html.DisplayFor(model => model.phone)</td>
                <td scope="row">@Html.DisplayFor(model => model.email)</td>
            </tr>
        </tbody>
    </table>
</body>
</html>
<br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
